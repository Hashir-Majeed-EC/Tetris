<Page x:Class="Tetris.Heuristics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tetris"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Heuristics"
      Background="Black">

    <StackPanel Margin="10" VerticalAlignment="Center">
        <DockPanel VerticalAlignment="Center" Margin="10">
            <Slider Maximum="255" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="Lines" ValueChanged="ValChanged" />
        </DockPanel>

        <DockPanel VerticalAlignment="Center" Margin="10">
            <Slider Maximum="255" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="Bumpiness" ValueChanged="ValChanged" />
        </DockPanel>

        <DockPanel VerticalAlignment="Center" Margin="10">
            <Slider Maximum="255" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="Holes" ValueChanged="ValChanged" />
        </DockPanel>

        <DockPanel VerticalAlignment="Center" Margin="10">
            <Slider Maximum="255" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="Height" ValueChanged="ValChanged" />
        </DockPanel>
    </StackPanel>
</Page>
