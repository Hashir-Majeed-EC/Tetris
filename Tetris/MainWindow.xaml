<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    
    <Window.Resources>
        <local:PieceVisibility x:Key="VConv" />
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Name="S1" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[0].c}"/>
        <Rectangle Name="S2" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[1].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S3" Grid.Column="5" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[2].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S4" Grid.Column="6" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[3].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S5" Grid.Column="7" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[4].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S6" Grid.Column="8" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[5].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S7" Grid.Column="9" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[6].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S8" Grid.Column="10" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[7].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S9" Grid.Column="11" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[8].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S10" Grid.Column="12" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[9].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S11" Grid.Column="13" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[10].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S12" Grid.Column="14" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[11].c, Converter={StaticResource VConv}}"/>
        <Rectangle Name="S13" Grid.Column="15" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Fill="Red" Stretch="Fill" Visibility="{Binding board.pos[12].c, Converter={StaticResource VConv}}"/>
    </Grid>
</Window>
